<mvc:View 
xmlns:f="sap.f" 
controllerName="desafio.l4e.app.controller.Menu" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m"
xmlns:tnt="sap.tnt" >
    <tnt:ToolPage id="toolPage">
        <tnt:header>
		    <tnt:ToolHeader >
                <Button icon="sap-icon://menu2" type="Default" press=".onSideNavButtonPress">
                    <layoutData>
                        <OverflowToolbarLayoutData priority="NeverOverflow" />
                    </layoutData>
                </Button>
                <VBox >
                <Image src="images/logo.png" width="50px" height="50px"/>
                </VBox>
            </tnt:ToolHeader>
		</tnt:header>
        <tnt:sideContent>
			<tnt:SideNavigation itemSelect="onItemSelect" expanded="true">
                <tnt:NavigationList
                    id="navigationList"
                    width="320px"
                    selectedKey="subItem3">
                    <tnt:NavigationListItem text="Banco de serviços" key="rootItem1" icon="sap-icon://cloud" >
                        <tnt:NavigationListItem text="Cadastro de Usuário" select="onNavCadastroUsuario" icon="sap-icon://add-contact"/>
                        <tnt:NavigationListItem text="Cadastro de Serviços" select="onNavCadastroPlataformas" icon="sap-icon://add-contact" />
                        <tnt:NavigationListItem text="Consulta de Serviços" select="onNavConsultaPlataformas" icon="sap-icon://add-contact"/>
                        <tnt:NavigationListItem text="Detalhe de Serviços" select="onNavDetalheServico" icon="sap-icon://add-contact"/>
                    </tnt:NavigationListItem>
                </tnt:NavigationList>
            </tnt:SideNavigation>
		</tnt:sideContent>
         
        <tnt:mainContents>
			<NavContainer id="pageContainer">
				<pages></pages>
			</NavContainer>
		</tnt:mainContents>
        </tnt:ToolPage>
</mvc:View>