<mvc:View xmlns:uxap="sap.uxap" xmlns:core="sap.ui.core" 
controllerName="desafio.l4e.app.controller.CadastroUsuario" 
xmlns:form="sap.ui.layout.form" 
xmlns:mvc="sap.ui.core.mvc" 
displayBlock="true" 
xmlns="sap.m">

    <Page showHeader="false">
        <content  >
            <VBox width="25%"  >
                <Image src="./images/logoName.png" width="100%" height="100%"  />
            </VBox>
            <form:Form  >
                <form:title>
                    <core:Title text="Cadastro de usuÃ¡rio" level="H6"></core:Title>
                </form:title>
                <form:layout   >
                    <form:ColumnLayout columnsL="2" columnsM="2" columnsXL="2"  ></form:ColumnLayout>
                </form:layout>
                
                <form:formContainers  >
                    <form:FormContainer  >
                        <form:formElements  >
                            <form:FormElement  >
                                <form:label>
                                    <Label text="Nome" design="Bold" > </Label>
                                </form:label>
                                <form:fields >
                                    <Input value="{Usuario>/nome}"></Input>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement >
                                <form:label>
                                    <Label text="Email" design="Bold" > </Label>
                                </form:label>
                                <form:fields >
                                    <Input value="{Usuario>/mail}"></Input>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement >
                                <form:label>
                                    <Label text="Senha" design="Bold" > </Label>
                                </form:label>
                                <form:fields >
                                    <Input value="{Usuario>/senha}" type="Password"></Input>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement >
                                <form:label>
                                    <Label text="Telefone" design="Bold" > </Label>
                                </form:label>
                                <form:fields>
                                    <Input value="{Usuario>/telefone}" ></Input>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                </form:formContainers>
            </form:Form>
                        
        </content>
        <OverflowToolbar >
            <ToolbarSpacer />
                <Button text="Cadastrar" type="Emphasized" press="onCadastrar" width="12%" />
            <ToolbarSpacer />
        </OverflowToolbar>

        <content >
            <Image src="./images/logoL4E.png" width="100px" height="100px"  />
        </content>

        <footer >
            <OverflowToolbar >
                
            </OverflowToolbar> 
        </footer>
       
    </Page>
		
</mvc:View>